<div class='input'>
  <input on-focus="focus" on-blur="blur" on-keydown="keydown"
           type='{{type}}'
           class='input__field'
           name='{{name}}'
           value='{{value}}'
           placeholder=' '
           data-mask='{{mask}}'/>
  <span class="input__placeholder">{{placeholder}}</span>
  <span class="input__error">{{error}}</span>
</div>
